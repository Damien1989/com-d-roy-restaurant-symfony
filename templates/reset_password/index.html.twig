{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <form method="post">
        <h1 class="h3 mb-3 font-weight-normal">Réinitialiser mon mot de passe</h1>
        <label for="inputEmail">Votre Email</label>
        <input type="email" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Votre email" required autofocus>

        <button class="btn btn-lg btn-primary btn-sm mt-4" type="submit">
            Valider
        </button>
        <hr>
        <p class="text-center">Ou souhaitez vous <a href="{{ path('app_login') }}">vous connecter</a> </p>
    </form>
{% endblock %}
