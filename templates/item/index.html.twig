{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block body %}
<h1>Nos produits</h1>

<div class="row product-container">
    {% for items in items %}
        <div class="col-md-4">
            <div class="product-item text-center">
                <a href="{{ path('app_item_show', { 'slug' : items.slug }) }}"><img src="/uploads/{{ items.picture }}" alt="{{ items.name }}" class="img-fluid"></a>
                <h5>{{ items.name }}</h5>
                <span class="item-price">{{ (items.price) }} â‚¬</span>
            </div>
        </div>
    {% endfor %}
{% endblock %}
